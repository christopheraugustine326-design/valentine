<script>
function yesClicked() {
  document.body.innerHTML = "<h1>Yay! ‚ù§Ô∏è You just made me the happiest person alive üòç</h1>";
}

function moveNo() {
  const btn = document.getElementById("noBtn");
  const x = Math.random() * (window.innerWidth - btn.offsetWidth);
  const y = Math.random() * (window.innerHeight - btn.offsetHeight);
  btn.style.left = x + "px";
  btn.style.top = y + "px";
}
</script>

